<div class="single-book">
  <div class="book-header">
    <h2>
      {{book.title}}
    </h2>
    <p>
      by {{book.author}}
    </p>
  </div>
  <div class="single-book-body">
    <p>
      Genre: {{book.category.name}}
    </p>
    <p>
      {{#if book.checked_out}}
      Sorry, this book is not available.<br>
      {{else}}
      Good news! this book is available!<br>
      <button class="check-out-book">Check Out</button>
      {{/if}}
      {{#if checkedOut}}
      <button class="check-in-book">Return this Book</button>
      {{/if}}
      {{#if onWishlist}}
      <button id="remove-from-wishlist" data-id={{wish.book.id}}>Remove from Wishlist</button>
      {{else}}
      <button id="add-to-wishlist">Add to Wishlist</button>
      {{/if}}
    </p>
  </div>
</div>

<div class="vote">
  <h3>
    Votes: {{book.vote_count}}
  </h3>

  {{#each book.vote as |vote|}}
  Votes: {{userVotes}}
  {{/each}}
</div>

<div class="reviews">
  {{#if book.reviews}}
<h3>
  Reviews
</h3>
{{#each book.reviews as |review|}}
{{> review-info review}}
{{/each}}
{{/if}}
<a href="/account" id="vote-a-book">Vote For This Book</a>
<a href="/addreview/{{book.id}}" id="add-a-review">Add A Review</a>
<a href="/addbook" id = "add-a-book">Add A Book</a>
</div>


<script src="/javascript/checkout-book.js"></script>
<script src="/javascript/remove-from-wishlist.js"></script>
<script src="/javascript/add-book.js"></script>
<script src="/javascript/vote.js"></script>
<script src="/javascript/add-to-wishlist.js"></script>
<script src="/javascript/checkin-book.js"></script>

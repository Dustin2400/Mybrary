<div class="form-section">
    <h1>Add A Book</h1>
</div>
    <div class="form-section"> 
    <form class = "add-new-book">
      <div class="add-book-section">
                    <label for="book-title">Title</label>
                    <input type="text" id="book-title" name="book-title" />
      </div> 
          <div class="add-book-author">
                    <label for="book-author">Author</label>
                    <input type="text" id="book-author" name="book-author" />
                </div>
            <div class="add-book-category">
                <p>Choose a Category or make a new one.</p>
                    <label for="category-name">Category</label>
                    <select id="category-name" name"category-name">
                        {{#each category as |category|}}
                        <option id="{{category.id}}">{{category.name}}</option>
                        {{/each}}
                    </select>
                    <label for="new-category">New Category</label>
                    <input type="text" id="new-category" name="new-category" />
            </div>
             <button type="submit" class="btn">Add Book</button> 
     </div>


<script src="/javascript/add-book.js"></script>